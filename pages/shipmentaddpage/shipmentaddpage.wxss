.container {
    padding: 20px;
  }
  
  .form-item {
    margin-bottom: 20px;
  }
  
  .label {
    font-size: 16px;
    margin-bottom: 5px;
    display: block;
  }
  
  .input, .textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  .submit-btn {
    width: 100%;
    padding: 10px;
    background-color: #1AAD19;
    color: white;
    text-align: center;
    border-radius: 4px;
  }
  