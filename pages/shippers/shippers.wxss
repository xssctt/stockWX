  /**index.wxss**/
.nx_swiper swiper{
    width: 750rpx;
    height: 400rpx;
  }
  .nx_swiper swiper image{
    width: 750rpx;
    height: 400rpx;
  }
  .nx_congar {
    margin: 20rpx;
  }
  
  
  .nx_congar_title{
    padding: 20rpx;
    color: #666;
    font-weight: bold;
    font-size: 35rpx;
    background-color: white;
    border-bottom: 1px solid #eee;
    border-radius: 10rpx 10rpx 0 0;
  } 
  
  .nx_congar_list{
    /* 上 右 下 左 */
    padding: 20rpx 20rpx 0 20rpx;
    display: flex;
    flex-wrap: wrap; 
    background-color: white;
    border-radius: 0 0 10rpx 10rpx;
  }
  
  .nx_congar_list navigator{
    margin-bottom: 20rpx;
    text-align: center;
    color: #666;
  } 
  
  .input{
    padding: 20rpx;
    color: #666;
    font-weight: bold;
    font-size: 22rpx;
    background-color: white;
    border-bottom: 1rpx solid #eee;
    border-radius: 10rpx 10rpx 0 0;
  }
  
  
  
  /* 三宫格 */
  .nx_congar_item_3{
    width: 33.3%;
  }
  
  .nx_congar_item_3 image{
    width: 90%;
    height: 180rpx;
  }
  .nx_item_name{
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;    /* 数据横排列 */
    -webkit-line-clamp: 1;  /*显示一行*/
    font-weight: bold;
    font-size: 35rpx;
  }
  
  
  
  /*  */
  .nx_line {
    margin: 20rpx;
  }
  
  
  .nx_line_title {
    padding: 20rpx;
    color: #666;
    font-weight: bold;
    font-size: 35rpx;
    background-color: white;
    border-bottom: 1px solid #eee;
    border-radius: 10rpx 10rpx 0 0;
  } 
  
  .nx_line_list {
    background-color: white;
    border-radius: 0 0 10rpx 10rpx;
  }
  .nx_line_list .nx_line_item {
    width: 100%;
    display: flex;
    padding: 20rpx;
    border-bottom: 1px solid #eee;
  }
  
  .nx_line_left {
    flex:2;
    display: flex;
    align-items: center;
  
  }
  
  .nx_line_left image {
    width: 100%;
    height: 100%;
  }
  
  .nx_line_mid {
    flex:8;
    display: flex;
   flex-direction: column;
    justify-content: space-between;
    color: #999;
    padding: 0 40rpx;
  }
  .nx_line_right {
    flex:1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }
  
  
  .btn{
    font-size: 28rpx;
    border: 1rpx solid #ccc;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    background-color: #eee;
    margin:0 0 10rpx;
  }
  
  
  